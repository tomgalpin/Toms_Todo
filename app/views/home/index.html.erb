<div id="week" class="monday">

  <div id="monday" class="flip day active">
    <!-- if class is active, the render 'big_list' -->
    <%= render "big_list" %>
      <!-- else render "small_list" -->
  </div> <!-- id="monday" -->

  <div id="tuesday" class="flip day">
    <%= render "small_list" %>
  </div>

  <div id="wednesday" class="flip day">

  </div>

  <div id="thursday" class="flip day">

  </div>

  <div id="friday" class="flip day">

  </div>

  <div id="saturday" class="flip day">

  </div>

  <div id="sunday" class="flip day">

  </div>

</div> <!-- id="week" -->


