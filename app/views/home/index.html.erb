<div id="week" class="monday">

  <% @days.each do |day| %>
    <% if day == "monday" %>
      <div id='<%= day %>' class="flip day active">
        <%= render :partial => "big_list", :locals => { :day_of_week => day.capitalize }  %>
      </div>
    <% else %>
      <div id='<%= day %>' class="flip day">
        <%= render :partial => "small_list", :locals => { :day_of_week => day.capitalize }  %>
      </div>
    <% end %>
  <% end %>



</div> <!-- id="week" -->


